# Database
DATABASE_URL="postgresql://username:password@localhost:5432/foody_db?schema=public"

# JWT Authentication
JWT_SECRET="your-super-secret-jwt-key-change-this-in-production"
JWT_EXPIRES_IN="7d"  # Token expiration (e.g., "7d", "24h", "1h", "3600s")

# Server Configuration
HOST="localhost"  # Server host (default: localhost)
PORT=4000  # Server port (default: 4000)
NODE_ENV="development"  # Environment: development, production, test

# CORS Configuration
CORS_ORIGIN="http://localhost:3000"  # Comma-separated list of allowed origins

# Logging
LOG_LEVEL="info"  # Log level: error, warn, info, debug (default: info)

# Prisma Debugging (optional)
# DEBUG_PRISMA="true"  # Enable Prisma query logging in development
